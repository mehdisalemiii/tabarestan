{
  "version": 2,
  "builds": [
    { "src": "**/*.html",    "use": "@vercel/static" },
    { "src": "css/**/*.css", "use": "@vercel/static" },
    { "src": "js/**/*.js",   "use": "@vercel/static" },
    { "src": "images/**/*",  "use": "@vercel/static" },
    { "src": "fonts/**/*",   "use": "@vercel/static" },
    { "src": "public/**/*",  "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/$",               "dest": "/index.html" },
    { "src": "/shop$",           "dest": "/shop.html" },
    { "src": "/about$",          "dest": "/about_us.html" },
    { "src": "/contact$",        "dest": "/contact.html" },
    { "src": "^/([^/.]+)$",      "dest": "/$1.html" },
    { "src": "/robots\\.txt$",   "dest": "/public/robots.txt" },
    { "src": "/sitemap\\.xml$",  "dest": "/public/sitemap.xml" }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml; charset=utf-8" }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        { "key": "Content-Type", "value": "text/plain; charset=utf-8" }
      ]
    }
  ]
}
